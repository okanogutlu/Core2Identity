@model IEnumerable<Core2Identity.Models.ApplicationUser>

<table class="table table-boardered table-stripped m-1 p-1 table-sm">

    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No users Found
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.UserName</th>
                <th>@item.Email</th>
                <th>
                    <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Admin">
                        <button type="submit" class="bg-danger">Delete</button>
                        <a class="btn btn-primary" asp-action="Update" asp-controller="Admin" asp-route-id="@item.Id">Update</a>
                    </form>
                </th>
            </tr>
        }
    }
</table>
<a asp-action="Create" class="btn btn-primary"> Create</a>
