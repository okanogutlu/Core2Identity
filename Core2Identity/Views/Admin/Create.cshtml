@model Core2Identity.Models.RegisterModel


<form asp-action="Create" method="post" class="m-1 p-1">
    <div class="text-danger" asp-validation-summary="All"></div> <!-- ModelState.AddModelError("", item.Description);-->
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-danger" value="Cancel" />
</form>