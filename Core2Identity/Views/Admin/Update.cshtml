@model Core2Identity.Models.ApplicationUser 
    <!-- Kendi oluşturduğumuz ApplicationUser Modelini burada kullanıyoruz. ApplicationUser sınıfının içinde prop yok 
        çünkü zaten kalıtım ile propları otomatik olarak alıyor. İstersek ek yapabiliriz. UserManager ise tüm kullanıcıları
        yönettiğimiz nesnedir. DbContext gibi -->


<form asp-action="Update" method="post" class="m-1 p-1">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div> <!--model only yaparak bizim kontrol etmemiz sağlandı-->
    <div class="form-group">
        <label asp-for="Id"></label>
        <input disabled asp-for="Id" class="form-control" />
    </div>
    
    <div class="form-group">
        <label for="Password">Parola</label> <!--asp tag helper ile almadık çünkü bunun kontrolünü sağlamamız gerekiyor,kurallara uygunluk açısından-->
        <input name="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-danger" value="Cancel" />
</form>