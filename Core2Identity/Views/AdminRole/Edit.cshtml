@model RoleDetails
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>


<form asp-action="Edit" method="post">

    <input type="hidden" name="RoleId" value="@Model.Role.Id" />
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />

    <h6 class="bg-info p-1 text-white">
        Add To @Model.Role.Name
    </h6>
    <table class="table table-bordered table-sm table-striped">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (var item in Model.NonMembers)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToAdd" value="@item.Id" />
                    </td>
                </tr>
            }
        }
    </table>
    <h6 class="bg-info p-1 text-white">
        Delete From @Model.Role.Name
    </h6>
    <table class="table table-bordered table-sm table-striped">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">All Users Are NonMembers</td></tr>
        }
        else
        {
            @foreach (var item in Model.Members)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToDelete" value="@item.Id" /> <!--name="IdsToDelete" ibaresi, listeye ekleyecek.-->
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="bg-danger">Save</button>
    <a asp-action="Index" class="btn btn-secondary"> Cancel</a>
</form>

