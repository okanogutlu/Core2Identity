@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
@if (TempData["message"]!=null)
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}
<table class="table table-boardered table-stripped m-1 p-1 table-sm">

    <tr>
        <th>Role Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Role
            </td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" asp-controller="Adminrole">
                        <button type="submit" class="bg-danger">Delete</button>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Adminrole" asp-route-id="@role.Id">Edit</a>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" class="btn btn-primary"> Create</a>